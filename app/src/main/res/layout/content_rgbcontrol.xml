<?xml version="1.0" encoding="utf-8"?>




<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RGBcontrol"
    tools:showIn="@layout/activity_rgbcontrol"
    android:id="@+id/relativeLayout">



    <ImageView
        android:id="@+id/colorShow"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="108dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="108dp"
        android:layout_marginRight="108dp"
        android:background="#000000"
        android:contentDescription="Shows the currently selected color"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/offBtn"
        android:layout_width="89dp"
        android:layout_height="56dp"
        android:layout_alignTop="@+id/colorShow"
        android:layout_alignEnd="@+id/SBred"
        android:layout_alignRight="@+id/SBred"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:text="OFF"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <!--Red-->
    <TextView
        android:id="@+id/RText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SBred"
        android:layout_centerHorizontal="true"
        android:text="Red: 0"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />

    <SeekBar
        android:id="@+id/SBred"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/GText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="40dp" />

    <!--Green-->
    <TextView
        android:id="@+id/GText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SBgreen"
        android:layout_centerHorizontal="true"
        android:text="Green: 0"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />

    <SeekBar
        android:id="@+id/SBgreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="40dp" />

    <!--Blue-->
    <TextView
        android:id="@+id/BText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SBblue"
        android:layout_centerHorizontal="true"
        android:text="Blue: 0"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />

    <SeekBar
        android:id="@+id/SBblue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="80dp" />

</RelativeLayout>
